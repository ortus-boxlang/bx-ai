/**
 * Temperature Demo
 * See how temperature affects AI responses
 */

println( "=== Temperature Demo ===" )
println( "Same prompt with different temperatures" )
println()

prompt = "Complete this sentence creatively: The robot walked into the room and"

temperatures = [ 0.0, 0.5, 1.0, 1.5, 2.0 ]

println( "Prompt: '#prompt#'" )
println()

temperatures.each( temp => {
    println( "-".repeat( 70 ) )
    println( "Temperature: #temp#" )
    println( "-".repeat( 70 ) )
    
    try {
        answer = aiChat(
            prompt,
            { 
                temperature: temp,
                max_tokens: 100
            }
        )
        
        println( answer )
        
    } catch( any e ) {
        println( "âŒ Error: #e.message#" )
    }
    
    println()
} )

println( "ğŸ’¡ Observations:" )
println( "- Temperature 0.0: Very consistent, predictable" )
println( "- Temperature 0.5: Balanced, slight variation" )
println( "- Temperature 1.0: More creative, diverse responses" )
println( "- Temperature 1.5: Highly creative, unexpected" )
println( "- Temperature 2.0: Very wild, may be incoherent" )
