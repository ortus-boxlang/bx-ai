 * Creates a fluent MCP (Model Context Protocol) client for consuming MCP servers
 */
@BoxBIF
class {

	/**
	 * Creates a fluent MCP client for consuming Model Context Protocol servers
	 * <p>
	 * MCP is a protocol for connecting AI models to external tools and data sources.
	 * This BIF provides a convenient way to interact with MCP servers.
	 *
	 * Example:
	 * ```
	 * // Simple usage
	 * result = MCP( "http://localhost:3000" ).invoke( "searchDocs", { query: "syntax" } )
	 *
	 * // With configuration
	 * client = MCP( "http://localhost:3000" )
	 *     .withTimeout( 5000 )
	 *     .withBearerToken( "token" )
	 *     .onSuccess( ( response ) => { writeLog( "Success: #response.getData()#" ) } )
	 *     .onError( ( response ) => { writeLog( "Error: #response.getError()#" ) } )
	 *
	 * // Discovery
	 * tools = MCP( "http://localhost:3000" ).listTools()
	 * resources = MCP( "http://localhost:3000" ).listResources()
	 * prompts = MCP( "http://localhost:3000" ).listPrompts()
	 * ```
	 *
	 * @baseURL The base URL of the MCP server (required)
	 *
	 * @return An MCPClient instance with fluent API
	 */
	function invoke( required string baseURL ) {
		return new bxModules.bxai.models.mcp.MCPClient( arguments.baseURL );
	}

}
