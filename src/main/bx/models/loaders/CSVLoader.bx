 * Loads CSV files into Document objects.
 * Each row can become a separate document, or all rows combined into one.
 */
class extends="BaseDocumentLoader" {

	/**
	 * Static configuration for CSV loader
	 */
	static {
		DEFAULT_CONFIG = {
			encoding        : "UTF-8",
			includeMetadata : true,
			splitMode       : "none",
			delimiter       : ",",
			hasHeaders      : true,
			rowsAsDocuments : false,
			columns         : [],
			skipRows        : 0
		};
	}

	/**
	 * Initialize the CSVLoader
	 *
	 * @source Path to the CSV file
	 * @config Configuration options
	 *
	 * @return CSVLoader instance
	 */
	function init( string source = "", struct config = {} ) {
		super.init( source: arguments.source, config: {} );
		variables.config = duplicate( static.DEFAULT_CONFIG ).append( arguments.config, true );
		return this;
	}

	/**
	 * Get the loader name
	 *
	 * @return The loader name
	 */
	string function getName() {
		return "CSVLoader";
	}

	/**
	 * Load the CSV file into Document objects
	 *
	 * @return Array of Document objects
	 */
	array function load() {
		// Validate source exists
		if ( !len( variables.source ) ) {
			throw(
				type    : "CSVLoader.NoSource",
				message : "No source file specified"
			);
		}

		if ( !fileExists( variables.source ) ) {
			throw(
				type    : "CSVLoader.FileNotFound",
				message : "File not found: #variables.source#"
			);
		}

		// Read and parse CSV
		var content  = readFile( variables.source );
		var fileInfo = getSourceInfo();
		var rows     = parseCSV( content );

		// Check if we should create a document per row
		if ( variables.config.rowsAsDocuments ) {
			return createRowDocuments( rows, fileInfo );
		}

		// Create single document with all content
		var textContent = formatAsText( rows );
		var doc = createDocument(
			content            : textContent,
			additionalMetadata : {
				"fileType"     : "csv",
				"fileName"     : fileInfo.name,
				"fileSize"     : fileInfo.size,
				"lastModified" : fileInfo.lastModified,
				"rowCount"     : rows.len(),
				"delimiter"    : variables.config.delimiter
			}
		);

		return [ doc ];
	}

	/**
	 * Parse CSV content into array of rows
	 *
	 * @content The CSV content
	 *
	 * @return Array of row arrays
	 */
	private array function parseCSV( required string content ) {
		var rows      = [];
		var lines     = listToArray( arguments.content, char( 10 ), true );
		var delimiter = variables.config.delimiter;
		var headers   = [];
		var startRow  = 1 + variables.config.skipRows;

		// Handle headers
		if ( variables.config.hasHeaders && lines.len() > variables.config.skipRows ) {
			headers = parseCSVLine( lines[ startRow ], delimiter );
			startRow++;
		}

		// Parse data rows
		for ( var i = startRow; i <= lines.len(); i++ ) {
			var line = trim( lines[ i ] );
			if ( len( line ) ) {
				var values = parseCSVLine( line, delimiter );

				// Filter columns if specified
				if ( !variables.config.columns.isEmpty() && !headers.isEmpty() ) {
					values = filterColumns( values, headers );
				}

				rows.append( {
					"values"  : values,
					"headers" : headers,
					"rowNum"  : i - startRow + 1
				} );
			}
		}

		return rows;
	}

	/**
	 * Parse a single CSV line handling quoted values
	 *
	 * @line The CSV line
	 * @delimiter The delimiter character
	 *
	 * @return Array of values
	 */
	private array function parseCSVLine( required string line, required string delimiter ) {
		var values      = [];
		var current     = "";
		var inQuotes    = false;
		var chars       = listToArray( arguments.line, "", true );
		var prevChar    = "";

		for ( var i = 1; i <= chars.len(); i++ ) {
			var char = chars[ i ];

			if ( char == '"' && prevChar != '"' ) {
				inQuotes = !inQuotes;
			} else if ( char == arguments.delimiter && !inQuotes ) {
				values.append( trim( current ) );
				current = "";
			} else {
				current &= char;
			}

			prevChar = char;
		}

		// Don't forget the last value
		values.append( trim( current ) );

		return values;
	}

	/**
	 * Filter to only include specified columns
	 *
	 * @values Array of values
	 * @headers Array of headers
	 *
	 * @return Filtered array of values
	 */
	private array function filterColumns( required array values, required array headers ) {
		var filtered = [];

		for ( var colName in variables.config.columns ) {
			var idx = arguments.headers.findNoCase( colName );
			if ( idx > 0 && idx <= arguments.values.len() ) {
				filtered.append( arguments.values[ idx ] );
			}
		}

		return filtered;
	}

	/**
	 * Format rows as text content
	 *
	 * @rows Array of parsed rows
	 *
	 * @return Text representation
	 */
	private string function formatAsText( required array rows ) {
		var lines = [];

		for ( var row in arguments.rows ) {
			if ( !row.headers.isEmpty() ) {
				var parts = [];
				for ( var i = 1; i <= row.values.len(); i++ ) {
					var header = i <= row.headers.len() ? row.headers[ i ] : "Column#i#";
					parts.append( "#header#: #row.values[ i ]#" );
				}
				lines.append( parts.toList( ", " ) );
			} else {
				lines.append( row.values.toList( ", " ) );
			}
		}

		return lines.toList( char( 10 ) );
	}

	/**
	 * Create a document per row
	 *
	 * @rows Array of parsed rows
	 * @fileInfo File information for metadata
	 *
	 * @return Array of Document objects
	 */
	private array function createRowDocuments( required array rows, required struct fileInfo ) {
		var documents = [];

		for ( var row in arguments.rows ) {
			var content = "";

			if ( !row.headers.isEmpty() ) {
				var parts = [];
				for ( var i = 1; i <= row.values.len(); i++ ) {
					var header = i <= row.headers.len() ? row.headers[ i ] : "Column#i#";
					parts.append( "#header#: #row.values[ i ]#" );
				}
				content = parts.toList( ", " );
			} else {
				content = row.values.toList( ", " );
			}

			documents.append(
				createDocument(
					content            : content,
					additionalMetadata : {
						"fileType"     : "csv",
						"fileName"     : arguments.fileInfo.name,
						"rowNumber"    : row.rowNum,
						"totalRows"    : arguments.rows.len()
					}
				)
			);
		}

		return documents;
	}

	/**
	 * Set the delimiter character
	 *
	 * @delimiter The delimiter (e.g., ",", ";", "\t")
	 *
	 * @return CSVLoader for chaining
	 */
	CSVLoader function delimiter( required string delimiter ) {
		variables.config.delimiter = arguments.delimiter;
		return this;
	}

	/**
	 * Indicate the CSV has no headers
	 *
	 * @return CSVLoader for chaining
	 */
	CSVLoader function noHeaders() {
		variables.config.hasHeaders = false;
		return this;
	}

	/**
	 * Create a separate document for each row
	 *
	 * @return CSVLoader for chaining
	 */
	CSVLoader function rowsAsDocuments() {
		variables.config.rowsAsDocuments = true;
		return this;
	}

	/**
	 * Only include specific columns
	 *
	 * @columns Array of column names to include
	 *
	 * @return CSVLoader for chaining
	 */
	CSVLoader function columns( required array columns ) {
		variables.config.columns = arguments.columns;
		return this;
	}

	/**
	 * Skip N rows at the start
	 *
	 * @count Number of rows to skip
	 *
	 * @return CSVLoader for chaining
	 */
	CSVLoader function skipRows( required numeric count ) {
		variables.config.skipRows = arguments.count;
		return this;
	}

}
